<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/new_account_header"
              android:textAppearance="@style/TextAppearance.AppCompat.Headline"
              android:textAlignment="center"
              android:layout_marginTop="10sp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="10sp"
                  android:padding="10sp">

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/website"
                  android:inputType="textUri"
                  android:autofillHints="Website"
                  android:hint="Website"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/username"
                  android:inputType="text"
                  android:autofillHints="User Name"
                  android:hint="User Name"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/password"
                  android:inputType="text"
                  android:autofillHints="Password"
                  android:hint="Password"/>

    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="10sp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate Secure Password"
                android:id="@+id/generatePasswordBtn2"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_acct_create"
                android:text="Save Account Information"
                android:layout_gravity="center"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_acct_create"
                android:text="Cancel"
                android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>